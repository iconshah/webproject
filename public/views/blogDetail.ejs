<!-- views/blogDetail.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Detail</title>
    <!-- External Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom Styles -->
    <style>
        /* Add your custom styles here */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
        }
        .blog-detail {
            margin: 0 auto;
            margin-top: 50px;
            margin-bottom: 50px;
        }
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .blog-title {
            color: #007bff;
            font-weight: bold;
            font-size: 1.5rem;
        }
        .blog-content {
            font-size: 1.1rem;
        }
        .author-info {
            font-size: 0.9rem;
        }
        .created-at {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <%- include('navbar') %> <!-- Include navbar here -->
    
    <section class="blog-detail">
        <!-- Main Content -->
        <div class="container">
            <h1 class="mb-4 text-center">Blog Detail</h1>
            <div class="row">
                <div class="col-md-8 mx-auto mb-4">
                    <div class="card p-3">
                        <h2 class="card-title blog-title"><%= blog.title %></h2>
                        <p class="card-text blog-content"><%= blog.content %></p>
                        <p class="card-text author-info">Author ID: <%= blog.author_id %></p>
                        <p class="card-text created-at">Created At: <%= blog.created_at %></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
