<!-- views/blogDetail.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Detail</title>
    <link
      rel="icon"
      href="../images/favicon.png"
      height=""
      width=""
      type="image/x-icon"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <!-- External Stylesheet -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Custom Styles -->
    <style>
      body {
        background-color: rgb(0, 0, 0) !important;
      }
      .blog-detail {
        margin: 0 auto;
        margin-top: 50px;
        margin-bottom: 50px;
      }
      .blog-title {
        color: #007bff;
        font-weight: bold;
        font-size: 1.5rem;
      }
      .blog-content {
        font-size: 1.1rem;
      }
      .author-info {
        font-size: 0.9rem;
      }
      .created-at {
        font-size: 0.9rem;
      }
      p {
        color: black !important;
      }
    </style>
    <link rel="stylesheet" href="../css/style.css" />
  </head>
  <body>
    <!-- Navbar -->
    <section id="navBar" class="navbar-fixed-top">
      <%- include('navbar', { user: user }) %>
      <!-- Pass the user variable here -->
    </section>

    <section class="blog-detail mt-5 pt-5">
      <!-- Main Content -->
      <div class="container-fluid mt-5">
        <h1 class="mb-4 text-center">Blog Detail</h1>
        <div class="row">
          <div class="col-md-8 mx-auto mb-4">
            <div class="card p-5 border-0" style="background-color: #1d1a1e;">
              <h2 class="card-title blog-title text-white"><%= blog.title %></h2>
              <hr style="color: aliceblue;">
              <p class="card-text blog-content text-white"><%= blog.content %></p>
              <p class="card-text author-info text-white">
                Author ID: <%= blog.author_id %>
              </p>
              <p class="card-text created-at text-white">
                Created At: <%= blog.created_at.toLocaleDateString() %>
              </p>
              
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
